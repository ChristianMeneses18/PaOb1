		getContentPane().add(dateChooser, "3, 12, fill, top");
		
		JLabel lblDireccion = new JLabel("Direccion:");
		lblDireccion.setFont(new Font("Tahoma", Font.PLAIN, 18));
		getContentPane().add(lblDireccion, "1, 10, center, center");
		
