package com.ayudamos.logica;

import java.util.ArrayList;
import java.util.List;

public class ManejadorDonacion {
	private static ManejadorDonacion instancia = null;
	private List<Usuario> usuarios = new ArrayList<>();
	
	
	public static ManejadorDonacion getInstancia() {
		if (instancia == null)
			instancia = new ManejadorDonacion();
		return instancia;
	}
	
	public void agregarUsuario(Usuario usuario) {
		usuarios.add(usuario);
	}
	
	public Usuario BuscarUsuario(String email) {
		Usuario aretornar=null;
		if (email == null) {
	        return null; 
	    }
		
		for(Usuario u: usuarios) {
			if (u.getEmail().equals(email))
				aretornar=u;
		}
		return aretornar;
	}
	
	public ArrayList<Beneficiario> obtenerBeneficiarios() {
	    ArrayList<Beneficiario> aRetornar = new ArrayList<>();
	    for (Usuario u : usuarios) {
	        if (u instanceof Beneficiario) {
	            aRetornar.add((Beneficiario) u);
	        }
	    }
	    return aRetornar;
	}


}
